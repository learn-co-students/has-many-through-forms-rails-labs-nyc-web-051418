<h1>New Post</h1>

<%= form_for @post do |f| %>

  <%= f.label "Title:" %> <br>
  <%= f.text_field :title %> <br>

  <%= f.label "Content:" %> <br>
  <%= f.text_area :content %> <br>

  <%= f.label "Select a category:" %> <br>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %> <br>

    <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
      <%= f.label "Can't find your desired category? Add one here:" %> <br>
      <%= categories_fields.text_field :name %><br>
    <% end %>
    <br>
  <%= f.submit %>
<% end %>
