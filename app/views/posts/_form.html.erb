<%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %><br><br>


  <%= f.label :content %>
  <%= f.text_area :content %><br><br>


  <%= f.label :category_ids %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name, {include_blank: 'None'} %>
  <%= f.fields_for :categories, post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %><br><br>
  <% end %>
  <%= f.submit %>
<% end %>
